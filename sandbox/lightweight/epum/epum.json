{
  "epu": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "virtualenv": {
      "path": "/home/${epu_username}/app-venv",
      "python" : "${python}",
      "virtualenv" : "${virtualenv}",
      "args" : "${virtualenv_args}"
    },
    "action": [
      "run"
    ],
    "run_config": {
      "program": "epu-management-service",
      "run_directory": "/home/${epu_username}/epum",
      "run_method": "supervised",
      "autorestart": true,
      "config": {
        "server": {
          "amqp": {
            "host": "${rabbitmq_host}",
            "username": "${rabbitmq_username}",
            "password": "${rabbitmq_password}",
            "exchange": "${rabbitmq_exchange}"
          }
        },
        "logging": {
          "formatters" : {
             "default": {
               "format": "%(asctime)s %(levelname)-8s %(name)-15s %(domain_info)s %(message)s",
               "datefmt": "%Y-%m-%d %H:%M:%S"
             }
          },
          "filters": {
             "domain": {
               "()" : "epu.domain_log.DomainLogFilter"
             }
           },
          "handlers": {
            "syslog": {
              "address": [
                "${syslog_host}",
                514
              ]
            },
            "file": {
              "formatter": "default",
              "level": "DEBUG",
              "filters": ["domain"]
            }
          },
          "root": {
            "handlers": [
              "console",
              "file",
              "syslog"
            ]
          }
        },
        "epumanagement": {
          "default_user": "${epu_username}",
          "provisioner_vars": {
            "broker_ip_address":"${rabbitmq_host}",
            "broker_host":"${rabbitmq_host}",
            "broker_username":"${rabbitmq_username}",
            "broker_password":"${rabbitmq_password}",
            "broker_exchange":"${rabbitmq_exchange}",
            "couchdb_host":"${couchdb_host}",
            "couchdb_username":"${couchdb_username}",
            "couchdb_password":"${couchdb_password}",
            "retrieve_method":"${epu_retrieve_method}",
            "package_repo":"${package_repo}",
            "git_repo":"${epu_git_repo}",
            "git_branch":"${epu_git_branch}",
            "git_commit":"${epu_git_commit}",
            "coi_services_git_repo":"${coi_services_git_repo}",
            "coi_services_git_branch":"${coi_services_git_branch}",
            "coi_services_git_commit":"${coi_services_git_commit}",
            "coi_services_buildout_config":"${coi_services_buildout_config}",
            "coi_services_system_name":"${coi_services_system_name}",
            "coi_services_archive_url":"${coi_services_archive_url}",
            "dtdata_archive_url":"${dtdata_archive_url}",
            "python":"${python}",
            "virtualenv":"${virtualenv}",
            "virtualenv_args":"${virtualenv_args}",
            "epuagent_retrieve_method": "${epuagent_retrieve_method}",
            "epuagent_archive_url": "${epuagent_archive_url}",
            "epuagent_git_repo": "${epuagent_git_repo}",
            "epuagent_git_branch": "${epuagent_git_branch}",
            "epuagent_git_commit": "${epuagent_git_commit}",
            "heartbeat_period_seconds": "${heartbeat_period_seconds}",
            "ddns_hostname": ""
          },
          "initial_definitions": {
            "pd_definition": {
              "general": {
                "engine_class": "epu.decisionengine.impls.needy.NeedyEngine"
              },
              "health": {
                "monitor_health": false
              }
            }
          },
          "initial_domains": {
          }
        }
      }
    }
  },
  "recipes": [
    "epu"
  ]
}
