{
  "run_type": "pyon_single",
  "parameters":{
    "rel":{
      "type":"release",
      "name":"${name}",
      "version":"0.1",
      "description":"Pyon service deployed by cloudinit.d",
      "ion":"0.0.1",
      "apps":[${app_json}]
    },
    "config":{
      "process_dispatcher_bridge":{
          "uri": "amqp://$${rabbitmq_username}:$${rabbitmq_password}@$${rabbitmq_host}/",
          "exchange": "$${exchange_scope}",
          "topic": "$${exchange_scope}"
      }
    },
    "logging":{
      "formatters":{
        "loggly":{
          "format": "[pyonapp_${name}: %(module)-15s:%(lineno)3d] %(levelname)-5s:%(message)s"
        }
      },
      "handlers":{
        "syslog":{
          "class": "logging.handlers.SysLogHandler",
          "address": ["localhost", 514],
          "formatter": "loggly",
          "facility": "local0"
        },
        "file":{
          "filename": "logs/pyonapp_${name}.log"
        }
      },
      "loggers":{
        "pyon":{
          "level": "INFO",
          "handlers": ["console", "file", "syslog"]
        },
        "ion":{
          "level": "INFO",
          "handlers": ["console", "file", "syslog"]
        }
      }
    }
  }
}
