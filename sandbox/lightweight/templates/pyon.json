{
  "run_type": "pyon_single",
  "parameters":{
    "name": "${name}",
    "module": "${module}",
    "cls": "${cls}",
    "config":{
      "server":{
        "amqp":{
          "host": "$${rabbitmq_host}",
          "username": "$${rabbitmq_username}",
          "password": "$${rabbitmq_password}"
        },
        "couchdb":{
          "host":  "$${couchdb_host}",
          "username": "$${couchdb_username}",
          "password": "$${couchdb_password}"
        }
      },
      "system":{
        "force_clean": false
      },
      "process_dispatcher_bridge":{
          "uri": "amqp://$${rabbitmq_username}:$${rabbitmq_password}@$${rabbitmq_host}/",
          "exchange": "$${rabbitmq_exchange}",
          "topic": "$${process_dispatcher_name}"
      }
    },
    "logging":{
      "formatters":{
        "loggly":{
          "format": "[ p_${name} : %(module)-15s:%(lineno)3d] %(levelname)-5s:%(message)s"
        }
      },
      "handlers":{
        "syslog":{
          "class": "logging.handlers.SysLogHandler",
          "address": ["localhost", 514],
          "formatter": "loggly",
          "level": "WARN",
          "facility": "local0"
        },
        "file":{
          "filename": "logs/pyonapp_${name}.log"
        }
      },
      "loggers":{
        "pyon":{
          "level": "INFO",
          "handlers": ["console", "file", "syslog"]
        },
        "ion":{
          "level": "INFO",
          "handlers": ["console", "file", "syslog"]
        }
      }
    }
  }
}
